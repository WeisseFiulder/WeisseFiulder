print("olá Usuário!")
valor1 = float(input('digite o primeiro valor: '))
valor2 = float(input('digite o segundo valor: '))
operacao = input('Qual operação deseja fazer? 1 - soma, 2 - subtracao, 3 - produto, 4 - divisao' )
    if operacao == '1':
        resultado = valor1 + valor2
        print('A soma de', valor1 '+' valor2 'é': resultado)
    elif operacao == '2':
        resultado = valor1 - valor2
        print('A subtracao de', valor1 '+' valor2 'é': resultado)
    elif operacao == '3'
        resultado = valor1*valor2
        print('O produto de', valor1 '+' valor2 'é': resultado)
    elif operacao == '4'
        resultado = valor1/valor2
        print('A divisao de', valor1 '+' valor2 'é': resultado)
    else
    print('Opção inválida')
